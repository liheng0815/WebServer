<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <!-- 配置servlet -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.leeh.servlet.LoginServlet</servlet-class>
	</servlet>
	
	 <!-- 配置mapping -->	
	<mapping>
	    <servlet-name>login</servlet-name>
	    <url-pattern>/login</url-pattern>
	</mapping>
	<mapping>
	    <servlet-name>login</servlet-name>
	    <url-pattern>/log</url-pattern>
	</mapping>
	
	
	 <!-- 配置servlet -->
	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>com.leeh.servlet.RegisterServlet</servlet-class>
	</servlet>
	
	<!-- 配置mapping -->	
	<mapping>
	    <servlet-name>register</servlet-name>
	    <url-pattern>/reg</url-pattern>
	</mapping>
   
</web-app>